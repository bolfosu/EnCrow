<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encrow.QRCodePage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="30"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center">

           

            <StackLayout Spacing="10">

                <Frame BorderColor="LightSlateGray" BackgroundColor="White" Padding="10" Margin="0,0,0,20">
                    <Image x:Name="UserSelfie" HeightRequest="300" WidthRequest="200"/>
                </Frame>


                <Frame BorderColor="LightSlateGray" BackgroundColor="White" Padding="10" Margin="0,0,0,20">
                    <Image x:Name="QrCodeImage" HeightRequest="300" WidthRequest="200"/>
                </Frame>
                <Button x:Name="GenerateBtn" Text="Generate proof" Clicked="OnGenerateClicked" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>