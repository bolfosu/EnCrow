<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encrow.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
            x:Name="ProveButton"
            Text="Prove" 
                FontSize="20"
            SemanticProperties.Hint="Button for accesing prover functionality"
            Clicked="ProveButton_Clicked"
            HorizontalOptions="Fill" /> 

            <Button
                x:Name="VerifyButton"
                Text="Verify" 
                FontSize="20"
                SemanticProperties.Hint="Button for accesing verifier functionality"
                Clicked="VerifyButton_Clicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
