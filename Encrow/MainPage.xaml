<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encrow.MainPage"
             Title="Encow">


    <ScrollView BackgroundColor="#d3eaf7">
        <StackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">


            <!-- Buttons -->
            <Button x:Name="ProveButton" Text="Prove" FontSize="24" BackgroundColor="#007bff" TextColor="White" 
                    Clicked="ProveButton_Clicked" CornerRadius="25" HorizontalOptions="CenterAndExpand" />

            <Button x:Name="VerifyButton" Text="Verify" FontSize="24" BackgroundColor="#28a745" TextColor="White" 
                    Clicked="VerifyButton_Clicked" CornerRadius="25" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
