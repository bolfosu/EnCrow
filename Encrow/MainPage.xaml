<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encrow.MainPage"
             Title="Encrow">

    
    <ScrollView BackgroundColor="#f2f2f2">
        <StackLayout Padding="30,50" Spacing="25">
            

            <!-- Buttons -->
            <Button x:Name="ProveButton" Text="Prove" FontSize="20" BackgroundColor="#007bff" TextColor="White" 
                    Clicked="ProveButton_Clicked" CornerRadius="10" HorizontalOptions="FillAndExpand"/>

            <Button x:Name="VerifyButton" Text="Verify" FontSize="20" BackgroundColor="#28a745" TextColor="White" 
                    Clicked="VerifyButton_Clicked" CornerRadius="10" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
